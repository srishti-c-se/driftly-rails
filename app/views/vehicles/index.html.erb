<div class='bg-black text-white min-vh-100 p-3'>
  <div class='container'>
      <%# OWNER UI - For vehicle owners/renters %>
    <h1 class='mb-4 text-center'>
      <%= current_user.renter? ? 'Turn your parked car into passive income' : 'Find your perfect ride for every adventure' %>
    </h1>
    <h2><%= current_user.renter? ? 'My Vehicles' : 'Available Vehicles' %></h2>
    <div class="vehicles-section">
      <div class="row">
        <%# UI for Renter %>
        <% if current_user.renter? %>
          <% @vehicles.each do |vehicle| %>
            <div class="col-md-6 mb-4">
              <div class="card h-100">
                <%# Replace with vehicle photo if available %>
                <%= image_tag "car2.jpg", class: "card-img-top", alt: vehicle.title %>

                <div class="card-body">
                  <h5 class="card-title"><%= vehicle.title %></h5>
                  <div class="d-flex justify-content-between align-items-center">
                    <p><strong>Price per day:</strong><%= number_to_currency(vehicle.price_per_day, unit: "Rs ") %></p>
                  <%= link_to "Details", vehicle, class: "btn btn-outline-primary" %>
                  </div>
                </div>
              </div>
            </div>
          <%end%>
        <% else %>
        <%# UI for user %>
          <% @vehicles.each do |vehicle| %>
            <div class="col-md-6 mb-4">
              <div class="card h-100">
                <%# Replace with vehicle photo if available %>
                <%= image_tag "car2.jpg", class: "card-img-top", alt: vehicle.title %>

                <div class="card-body">
                  <h5 class="card-title"><%= vehicle.title %></h5>
                  <div class='d-flex align-items-center justify-content-between'>
                    <p><strong>Price per day: </strong><%= number_to_currency(vehicle.price_per_day, unit: "Rs ") %></p>
                    <div class="d-flex align-items-center justify-content-end">
                      <%= link_to "Details", vehicle, class: "btn btn-outline-primary me-2" %>
                      <%= link_to "Book", new_vehicle_booking_path(vehicle), class: "btn btn-outline-primary" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <%end%>
        <% end %>
      </div>
    </div>
    <div class="">
      <% if current_user.renter? %>
        <%= link_to "New Vehicle", new_vehicle_path, class: "btn btn-outline-success" %>
        <%= link_to "All Bookings", bookings_path, Class: "btn btn-outline-info" %>
      <% else %>
        <%= link_to "My Bookings", bookings_path, Class: "btn btn-outline-info" %>
    </div>
  <% end %>
  </div>



