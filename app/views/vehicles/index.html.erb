<div class="container-fluid">
  <h1 class='Title'>
    <%= current_user.renter? ? 'Turn your parked car into passive income' : 'Find your perfect ride for every adventure' %>
  </h1>
  <h2><%= current_user.renter? ? 'My Vehicles' : 'Available Vehicles' %></h2>

  <div class="row">
    <%# UI for Renter %>
    <% if current_user.renter? %>
      <% @vehicles.each do |vehicle| %>
        <div class="col-md-6 mb-4">
            <%# vehicle image %>
          <div class="vehicle-image">
            <%= link_to vehicle, class: "d-block h-100" do %>
              <%= image_tag "car2.jpg", class: "card-img-top h-100 w-100", alt: vehicle.title, style: "object-fit: cover;" %>
            <% end %>
          </div>
            <%# card text %>
          <div class="card-body ms-2">
            <h5 class="vehicle-title"><%= vehicle.title %></h5>
            <div class="d-flex justify-content-between align-items-center">
              <p class="mb-0"><strong>Price per day:</strong> <%= number_to_currency(vehicle.price_per_day, unit: "Rs ") %></p>
              <%= link_to "Details", vehicle, class: "btn btn-outline-light px-4 py-2" %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <%# UI for user %>
      <% @vehicles.each do |vehicle| %>
        <div class="col-md-6 mb-4">
            <%# Vehicle image %>
          <div class="vehicle-image">
            <%= link_to vehicle, class: "d-block h-100" do %>
              <%= image_tag "car2.jpg", class: "card-img-top h-100 w-100", alt: vehicle.title, style: "object-fit: cover;" %>
            <% end %>
          </div>
            <%# card text %>
            <div class="card-body ms-2">
              <h5 class="vehicle-title"><%= vehicle.title %></h5>
              <div class="d-flex justify-content-between align-items-center">
                <p class="mb-0"><strong>Price per day: </strong><%= number_to_currency(vehicle.price_per_day, unit: "Rs ") %></p>
                <div class="d-flex align-items-center">
                  <%= link_to "Details", vehicle, class: "btn btn-outline-light px-4 py-2 me-2" %>
                  <%= link_to "Book", new_vehicle_booking_path(vehicle), class: "btn btn-outline-light px-4 py-2" %>
                </div>
              </div>
            </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
