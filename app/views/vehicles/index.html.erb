
<div style="margin: 20px; display: flex; flex-direction: column; gap: 5px;">
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Brand</th>
        <th>Model</th>
        <th>Year</th>
        <th>Seats</th>
        <th>Transmission</th>
        <th>Fuel type</th>
        <th>Address</th>
        <%# <th>Latitude</th> %>
        <%# <th>Longitude</th> %>
        <th>Active</th>
        <th>Description</th>
        <th>Price per day</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
    <%# OWNER UI %>
    <% if current_user.renter?%>
      <h1>My Vehicles</h1>
      <% @vehicles.each do |vehicle| %>
        <tr>
          <td><%= vehicle.title %></td>
          <td><%= vehicle.brand %></td>
          <td><%= vehicle.model %></td>
          <td><%= vehicle.year %></td>
          <td><%= vehicle.seats %></td>
          <td><%= vehicle.transmission %></td>
          <td><%= vehicle.fuel_type %></td>
          <td><%= vehicle.address %></td>
          <%# <td><%= vehicle.latitude %></td>
          <%# <td><%= vehicle.longitude %></td>
          <td><%= vehicle.active ? "Yes" : "No" %></td>
          <td><%= vehicle.description %></td>
          <td><%= number_to_currency(vehicle.price_per_day, unit: "Rs ") %></td>
          <td>
            <%= link_to "Details", vehicle, class: "btn btn-primary" %>
            <%# <%= link_to "Bookings", vehicle_bookings_path(vehicle), class: "btn btn-success mt-3" %>
          </td>
        </tr>

      <% end %>
      <%# USER UI %>
    <% else %>
      <h1>Vehicles</h1>
      <% @vehicles.each do |vehicle| %>
        <tr>
          <td><%= vehicle.title %></td>
          <td><%= vehicle.brand %></td>
          <td><%= vehicle.model %></td>
          <td><%= vehicle.year %></td>
          <td><%= vehicle.seats %></td>
          <td><%= vehicle.transmission %></td>
          <td><%= vehicle.fuel_type %></td>
          <td><%= vehicle.address %></td>
          <%# <td><%= vehicle.latitude %></td>
          <%# <td><%= vehicle.longitude %></td>
          <td><%= vehicle.active ? "Yes" : "No" %></td>
          <td><%= vehicle.description %></td>
          <td><%= number_to_currency(vehicle.price_per_day, unit: "Rs ") %></td>
          <td>
            <%= link_to "Details", vehicle, class: "btn btn-primary btn-sm" %>
            <%= link_to "Book", new_vehicle_booking_path(vehicle), class: "btn btn-primary btn-sm mt-3" %>
          </td>
        </tr>
        <div class="mt-3">
        </div>
      <% end %>
    <% end %>
    </tbody>
  </table>
  <%# display create vehicle button for owner %>
  <div class="mt-3">
    <% if current_user.renter? %>
      <%= link_to "New Vehicle", new_vehicle_path, class: "btn btn-success" %>
      <%= link_to "All Bookings", bookings_path, Class: "btn btn-success" %>
    <% else %>
      <%= link_to "Bookings", bookings_path, Class: "btn btn-success mt-3" %>
  </div>
  <% end %>
</div>
