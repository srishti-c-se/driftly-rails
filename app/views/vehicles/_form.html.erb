      <%# </tr> %>

      <tr>
        <th><%= f.label :active %></th>
        <td><%= f.input_field :active, class: "form-check-input" %></td>
      </tr>

      <tr>
        <th><%= f.label :description %></th>
        <td><%= f.text_area :description, class: "form-control", rows: 4 %></td>
      </tr>
    </tbody>
  </table>

  <div class="form-actions mt-3">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
