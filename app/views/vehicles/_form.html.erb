  <table class="table table-bordered">
    <tbody>
      <tr>
        <%# <th><%= f.label :user %></th>
        <%# <td><%= f.association :user, class: "form-control" %></td>
      </tr>

      <tr>
        <th><%= f.label :title %></th>
        <td><%= f.input_field :title, class: "form-control" %></td>
      </tr>

      <tr>
        <th><%= f.label :brand %></th>
        <td><%= f.input_field :brand, class: "form-control" %></td>
      </tr>

      <tr>
        <th><%= f.label :model %></th>
        <td><%= f.input_field :model, class: "form-control" %></td>
      </tr>

      <tr>
        <th><%= f.label :year %></th>
        <td><%= f.input_field :year, class: "form-control" %></td>
      </tr>

      <tr>
        <th><%= f.label :seats %></th>
        <td><%= f.input_field :seats, class: "form-control" %></td>
      </tr>

      <tr>
        <th><%= f.label :transmission %></th>
        <td><%= f.text_field :transmission, class: "form-control" %></td>
      </tr>

      <tr>
        <th><%= f.label :fuel_type %></th>
        <td><%= f.text_field :fuel_type, class: "form-control" %></td>
      </tr>

      <tr>
        <th><%= f.label :price_per_day %></th>
