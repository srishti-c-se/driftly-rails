<div class="card mb-3" style="max-width: 1100px;:auto;">
 <div class="row g-0">
    <div class="col-md-5">
        <%= image_tag "car1.jpg", class: "img-fluid rounded-start", alt: "car" %>
  </div>
    <div class="col-md-7">
      <div class="card-vehicle-infos">
        <h5 class="secondary-card-title"><%= @vehicle.title %></h5>
        <p class="card-text"><%= @vehicle.description.truncate(100) %></p>
        <p>Seats: <%= @vehicle.seats %> | Transmission: <%= @vehicle.transmission %> | Fuel: <%= @vehicle.fuel_type %></p>
        <p><strong>Price per day:</strong> Rs <%= @vehicle.price_per_day %></p>
        <p><i class="bi bi-geo-alt"></i> <%= @vehicle.address %></p>
        <div class="renter options" style="padding: 10px;">
          <% if current_user.renter? %>
            <%= link_to "Edit", edit_vehicle_path, class: "btn btn-outline-light px-2 py-1"  %>
            <%= link_to "Remove vehicle", vehicle_path(@vehicle), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger btn-sm px-2 py-1" %>
            <%= link_to "Bookings", vehicle_bookings_path(@vehicle), class: "btn btn-outline-light px-2 py-1" %>
          <% else %>
            <%= link_to "Home", vehicles_path, class: "btn btn-outline-light px-2 py-1" %>
            <%# <%= render "form", booking: @booking %>
            <%= link_to "Book this vehicle", new_vehicle_booking_path(@vehicle), class: "btn btn-outline-light px-2 py-1" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

  <%# Reviews %>
  <%# <%= render @vehicle %>

  <%= render partial: "reviews", locals: { vehicle: @vehicle, current_user: current_user } %>

</div>
