<%= simple_form_for([@vehicle, @booking, @review]) do |f| %>
  <%= f.input :rating, as: :select, collection: 1..5, input_html: { class: "form-select" } %>
  <%= f.input :comment, input_html: { class: "form-control", rows: 4 } %>
  <%= f.button :submit, "Create Review", class: "btn btn-primary mt-2" %>
<% end %>

<%= link_to "Home", root_path, class: "btn btn-primary" %>
