<div class="signup-page">
  <div class="overlay"></div>
  <div class="signup-box">
    <h2>Create your account</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :first_name, required: true, input_html: { class: "input-dark", autocomplete: "given-name" } %>
        <%= f.input :last_name, required: true, input_html: { class: "input-dark", autocomplete: "family-name" } %>
        <%= f.input :phone, required: true, input_html: { class: "input-dark", autocomplete: "tel" } %>
        <%= f.input :address, required: true, input_html: { class: "input-dark", autocomplete: "street-address" } %>
        <%= f.input :email, required: true, input_html: { class: "input-dark", autocomplete: "email" } %>
        <%= f.input :password, required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { class: "input-dark", autocomplete: "new-password" } %>
        <%= f.input :password_confirmation, required: true,
                    input_html: { class: "input-dark", autocomplete: "new-password" } %>
        <%= f.input :admin, label: "I am a", as: :select,
                    collection: [["Renter", true], ["User", false]],
                    include_blank: false,
                    input_html: { class: "input-dark" } %>
      </div>

      <!-- âœ… Fix: Put button inside a container -->
      <div class="form-actions">
        <%= f.button :submit, "Sign up", class: "btn btn-outline-light px-4 py-2" %>
      </div>
    <% end %>

    <div class="form-actions">
      <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-outline-light px-4 py-2" %>
    </div>
  </div>
</div>
