<div class="container mt-5">
  <div class="card shadow-sm">
    <div class="card-header text-center bg-primary text-white">
      <h2><%= @booking.new_record? ? "New Booking" : "Edit Booking" %></h2>
    </div>

    <div class="card-body">
      <%= simple_form_for([@vehicle, @booking], html: { class: "needs-validation", novalidate: true }) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <div class="row mb-3">
          <div class="col-md-6">
            <%= f.input :start_date, input_html: { class: "form-control" }, label_html: { class: "form-label" } %>
          </div>
          <div class="col-md-6">
            <%= f.input :end_date, input_html: { class: "form-control" }, label_html: { class: "form-label" } %>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-md-6">
            <%= f.input :pickup_address, input_html: { class: "form-control" }, label_html: { class: "form-label" } %>
          </div>
          <div class="col-md-6">
            <%= f.input :dropoff_address, input_html: { class: "form-control" }, label_html: { class: "form-label" } %>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-md-4">
            <%= f.input :total_price, input_html: { class: "form-control" }, label_html: { class: "form-label" } %>
          </div>
          <div class="col-md-4">
            <%= f.input :status, input_html: { class: "form-select" }, label_html: { class: "form-label" } %>
          </div>
          <div class="col-md-4">
            <%= f.input :payment_status, input_html: { class: "form-select" }, label_html: { class: "form-label" } %>
          </div>
        </div>

        <div class="text-center">
          <%= f.button :submit, @booking.new_record? ? "Create Booking" : "Update Booking", class: "btn btn-success btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
