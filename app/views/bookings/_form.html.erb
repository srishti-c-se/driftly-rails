<%= simple_form_for([@vehicle, booking], html: { class: "booking-form" }) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="mb-3">
    <%= f.input :start_date, label: "Check-in Date", input_html: { class: "form-control custom-input", type: "date" }, label_html: { class: "form-label text-light" } %>
  </div>

  <div class="mb-3">
    <%= f.input :end_date, label: "Check-out Date", input_html: { class: "form-control custom-input", type: "date" }, label_html: { class: "form-label text-light" } %>
  </div>

  <div class="mb-3">
    <%= f.input :pickup_address, label: "Pickup Address", input_html: { class: "form-control custom-input" }, label_html: { class: "form-label text-light" } %>
  </div>

  <div class="mb-3">
    <%= f.input :dropoff_address, label: "Dropoff Address", input_html: { class: "form-control custom-input" }, label_html: { class: "form-label text-light" } %>
  </div>

  <div class="row mb-3">
    <div class="col-md-4">
      <%= f.input :total_price, input_html: { class: "form-control custom-input", readonly: true, value: booking.total_price || "0.00" }, label_html: { class: "form-label text-light" } %>
    </div>

    <div class="col-md-4">
      <%= f.input :status, as: :string, input_html: { class: "form-control custom-input", readonly: true, value: booking.status || "pending" }, label_html: { class: "form-label text-light" } %>
    </div>

    <div class="col-md-4">
      <%= f.input :payment_status, as: :string, input_html: { class: "form-control custom-input", readonly: true, value: booking.payment_status || "unpaid" }, label_html: { class: "form-label text-light" } %>
    </div>
  </div>

  <div class="text-center mt-4">
    <%= f.button :submit, "Book Now", class: "btn btn-outline-light px-4 py-2 mt-10" %>
  </div>
<% end %>
